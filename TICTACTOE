function checkForWinner() {
    if (place[1] == "X" && place[2] == "X" && place[3] == "X") {
        alert("You win!");
        changeBackgroundWin();
        return true;
    } else if (place[4] == "X" && place[5] == "X" && place[6] == "X") {
        alert("You win!");
        changeBackgroundWin();
        return true;
